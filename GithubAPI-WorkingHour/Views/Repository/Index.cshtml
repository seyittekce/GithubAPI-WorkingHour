@model Core.Entities.RepositoryModelWithMaxLength
@{
    ViewData["Title"] = "Repolar";
}
<div class="container-fluid px-6 py-4">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-responsive table-hover" id="repoTable" style="width:100%">
                        <thead>
                            <tr>
                                <th>Repository Adı</th>
                                <th>Toplam Çalışma Saati</th>   
                                @foreach (var model in Model.Repository)
                                {
                                    @foreach (var dates in model.RepositoryWorkingDays)
                                    {
                                        <th>@dates.Date.Date.ToShortDateString()</th>
                                    }
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var repository in Model.Repository)
                            {
                                <tr>
                                    <td><a href="@Url.Action("GetRepositoryWorkingHourWithUser","Repository",new {name=repository.Name,owner=repository.Owner})">@repository.Name</a></td>
                                    <td>@repository.TotalWorkingHour</td>
                                   
                                        @foreach (var dates in repository.RepositoryWorkingDays)
                                        {
                                            <td>@dates.TotalWorkingHour</td>
                                        }

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
<script>
    $('#repoTable').DataTable();
</script>
}
