@model Core.Entities.GetRepositoryHourWithUserModel
<div class="container-fluid px-6 py-4">
    <div class="row">
        <div class="col-lg-12 col-md-12 col-12">
            <div class="card">
                <div class="card-body">
                    <h4 class="">@Model.Repository.Name</h4>
                    <table class="table table-hover table-responsive">
                        <thead>
                        <tr>
                            <th></th>
                        @foreach (var item in Model.WorkingHourUser)
                        {
                            @foreach (var result in item.ToList().GroupBy(x => x.RepositoryWorkingDays))
                            {

                              @foreach (var result1 in result)
                              {
                                  foreach (var result2 in result1.RepositoryWorkingDays)
                                  {
                                      <th>@result2.Date.ToShortDateString()</th>
                                  }
                              }





                            }

                        }
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var item in Model.WorkingHourUser)
                        {

                            var user = item.GroupBy(x=>x.User.AvatarUrl);
                            @foreach (var u in user)
                            {
                                <tr>
                                    <td><img src="@u.Key" class="avatar-lg rounded-circle border border-4 border-white-color-40"/> @item.Key</td>
                                </tr>
                            }
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

